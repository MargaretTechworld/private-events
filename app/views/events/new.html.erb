<%= form_for @event do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :date %>
      <%= f.date_field :date %>
    </div>
    <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>